<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
    <TextView
        android:id="@+id/nombremedicamento"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del medicamento:"
        android:textSize="25sp"
         />
       <EditText
           android:id="@+id/et_miembro_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:layout_marginTop="40dp"
           android:hint="Agregue aquí el nuevo miembro ...">

           <requestFocus />
       </EditText>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad total de unidades recetadas:"
        android:textSize="25sp"

      />
    <EditText
        android:id="@+id/et_cantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Agregue aquí el numero de unidades recetadas"
        android:inputType="number"
       >


    </EditText>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unidades por dia:"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/Unidades_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Agregue aquí unidades por dia "
        android:inputType="number">


    </EditText>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Horario:"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Agregue cada cuantas horas debe tomar del medicamento"
        android:inputType="number"
       >


    </EditText>
       <TextView
           android:layout_marginTop="40dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Primer toma:"
           android:textSize="25sp"
           />
       <EditText
           android:id="@+id/primer_toma"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="10"
           android:hint="Hora exacta de la primer toma"
           android:inputType="number"
           >


       </EditText>
    <Button
        android:id="@+id/btnAgregarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Agregar" />

   </LinearLayout>
</ScrollView>